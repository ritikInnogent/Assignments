datasource db {
  provider = "mysql"            // Database provider MySQL hai
  url      = env("DATABASE_URL")      // Database connection environment variable se milega
}

generator client {
  provider = "prisma-client-py"      // generates the client for prisma
}

model Product {
  id         Int      @id @default(autoincrement())
  name       String
  category   String
  price      Float
}
