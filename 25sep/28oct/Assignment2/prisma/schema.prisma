datasource db {
  provider = "mysql"                    // Database provider MySQL hai
  url      = env("DATABASE_URL")       // Database connection environment variable se milega
}

generator client {
  provider = "prisma-client-py"        // Python ke liye Prisma client generate karega
}

model Company {
  id       Int       @id @default(autoincrement())  
  name     String    @unique  
  location String                       
  products Product[]                         //one to many relationship
}

model Category {
  id      Int       @id @default(autoincrement())   
  name    String    @unique                          
  products Product[]           //one to many relationship                       
}

model Product {
  id          Int      @id @default(autoincrement())  
  name        String                                 
  price       Float                                   
  companyId   Int                                    
  categoryId  Int                                     // Foreign key: category id
  company     Company  @relation(fields: [companyId], references: [id])
  category    Category @relation(fields: [categoryId], references: [id])  
}









